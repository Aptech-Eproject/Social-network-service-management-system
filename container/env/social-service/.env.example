# ============================================
# üåê SOCIAL SERVICE CONFIGURATION
# ============================================

# Service Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8082

# ============================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ============================================

# SQL Server Connection
SQL_SERVER_HOST=your-sql-server-host
SQL_SERVER_PORT=1433
SQL_SERVER_USER=your-sql-user
SQL_SERVER_PASSWORD=your-sql-password
SOCIAL_DATABASE=SNMS_SocialDB

# Connection String
CONNECTION_STRING=Server=${SQL_SERVER_HOST},${SQL_SERVER_PORT};Database=${SOCIAL_DATABASE};User Id=${SQL_SERVER_USER};Password=${SQL_SERVER_PASSWORD};TrustServerCertificate=true;MultipleActiveResultSets=true;

# Entity Framework
EF_ENABLE_MIGRATIONS=true
EF_AUTO_MIGRATE=true
EF_SEED_DATA=true

# ============================================
# üîê AUTHENTICATION & AUTHORIZATION
# ============================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars-long-for-security
JWT_ISSUER=snms-api-gateway
JWT_AUDIENCE=snms-services

# Service Communication
USER_SERVICE_URL=http://user-service:8081
USER_SERVICE_API_KEY=your-internal-api-key

# ============================================
# üìÅ FILE STORAGE & MEDIA
# ============================================

# File Upload Configuration
FILE_STORAGE_PATH=/app/uploads
MAX_FILE_SIZE_MB=10
MAX_IMAGE_SIZE_MB=5
MAX_VIDEO_SIZE_MB=50

# Allowed File Types
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,avi,mov,wmv
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,txt

# Image Processing
ENABLE_IMAGE_COMPRESSION=true
IMAGE_QUALITY=85
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080

# ============================================
# üìù CONTENT MANAGEMENT
# ============================================

# Post Configuration
MAX_POST_LENGTH=5000
MAX_COMMENT_LENGTH=1000
ALLOW_POST_EDITING=true
POST_EDIT_TIME_LIMIT_MINUTES=30

# Content Moderation
ENABLE_CONTENT_MODERATION=true
AUTO_MODERATE_PROFANITY=true
REQUIRE_POST_APPROVAL=false

# Hashtags & Mentions
ENABLE_HASHTAGS=true
ENABLE_MENTIONS=true
MAX_HASHTAGS_PER_POST=10

# ============================================
# üë• SOCIAL FEATURES
# ============================================

# Friends & Following
ENABLE_FRIEND_REQUESTS=true
ENABLE_FOLLOWING_SYSTEM=true
MAX_FRIENDS_LIMIT=5000
MAX_FOLLOWING_LIMIT=10000

# Privacy Settings
DEFAULT_POST_PRIVACY=Public
ALLOW_PRIVATE_POSTS=true
ALLOW_FRIENDS_ONLY_POSTS=true

# Notifications
ENABLE_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# ============================================
# üí¨ MESSAGING & CHAT
# ============================================

# Direct Messages
ENABLE_DIRECT_MESSAGES=true
MAX_MESSAGE_LENGTH=2000
ALLOW_MESSAGE_ATTACHMENTS=true
MESSAGE_HISTORY_DAYS=365

# Group Chat
ENABLE_GROUP_CHAT=true
MAX_GROUP_MEMBERS=100
ALLOW_GROUP_CREATION=true

# ============================================
# üîç SEARCH & DISCOVERY
# ============================================

# Search Configuration
ENABLE_FULL_TEXT_SEARCH=true
SEARCH_RESULTS_LIMIT=50
ENABLE_SEARCH_SUGGESTIONS=true

# Content Discovery
ENABLE_TRENDING_POSTS=true
TRENDING_ALGORITHM=engagement
TRENDING_TIME_WINDOW_HOURS=24

# ============================================
# üìä ANALYTICS & METRICS
# ============================================

# Engagement Tracking
TRACK_POST_VIEWS=true
TRACK_USER_ACTIVITY=true
TRACK_ENGAGEMENT_METRICS=true

# Analytics Retention
ANALYTICS_RETENTION_DAYS=90
ENABLE_REAL_TIME_ANALYTICS=false

# ============================================
# üìä LOGGING & MONITORING
# ============================================

# Logging Configuration
LOG_LEVEL=Information
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=/app/logs/social-service.log

# Activity Logging
LOG_USER_ACTIONS=true
LOG_CONTENT_CREATION=true
LOG_SOCIAL_INTERACTIONS=true

# ============================================
# ‚ö° PERFORMANCE & CACHING
# ============================================

# Caching Configuration
ENABLE_MEMORY_CACHE=true
CACHE_EXPIRY_MINUTES=15
CACHE_SLIDING_EXPIRY=true

# Feed Generation
FEED_CACHE_MINUTES=10
MAX_FEED_ITEMS=100
FEED_ALGORITHM=chronological

# Database Performance
DB_CONNECTION_POOL_SIZE=100
DB_COMMAND_TIMEOUT_SECONDS=30
ENABLE_QUERY_OPTIMIZATION=true

# ============================================
# üîß DEVELOPMENT SETTINGS
# ============================================

# Hot Reload
DOTNET_USE_POLLING_FILE_WATCHER=true
DOTNET_WATCH_RESTART_ON_RUDE_EDIT=true

# Development Features
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true
SEED_TEST_DATA=true

# Health Checks
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_FILE_STORAGE=true