# ============================================
# üë§ USER SERVICE CONFIGURATION
# ============================================

# Service Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8081

# ============================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ============================================

# SQL Server Connection
SQL_SERVER_HOST=your-sql-server-host
SQL_SERVER_PORT=1433
SQL_SERVER_USER=your-sql-user
SQL_SERVER_PASSWORD=your-sql-password
USER_DATABASE=SNMS_UserDB

# Connection String
CONNECTION_STRING=Server=${SQL_SERVER_HOST},${SQL_SERVER_PORT};Database=${USER_DATABASE};User Id=${SQL_SERVER_USER};Password=${SQL_SERVER_PASSWORD};TrustServerCertificate=true;MultipleActiveResultSets=true;

# Entity Framework
EF_ENABLE_MIGRATIONS=true
EF_AUTO_MIGRATE=true
EF_SEED_DATA=true

# ============================================
# üîê AUTHENTICATION & AUTHORIZATION
# ============================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars-long-for-security
JWT_ISSUER=snms-api-gateway
JWT_AUDIENCE=snms-services
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_EXPIRY_DAYS=7

# Session Configuration
SESSION_SECRET=your-session-secret-key-min-32-chars
SESSION_TIMEOUT_MINUTES=30
SESSION_COOKIE_NAME=SNMS_SESSION
SESSION_SECURE_COOKIE=false

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# ============================================
# üîí PASSWORD & SECURITY POLICIES
# ============================================

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL_CHAR=true

# Account Lockout
LOCKOUT_MAX_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRY_HOURS=24
PASSWORD_RESET_EMAIL_ENABLED=true

# ============================================
# üìß EMAIL CONFIGURATION
# ============================================

# SMTP Settings (for password reset, verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_SSL=true
SMTP_FROM_EMAIL=noreply@snms.com
SMTP_FROM_NAME=SNMS System

# Email Templates
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_TOKEN_EXPIRY_HOURS=48

# ============================================
# üë• USER MANAGEMENT
# ============================================

# User Registration
ALLOW_USER_REGISTRATION=true
REQUIRE_EMAIL_VERIFICATION=true
DEFAULT_USER_ROLE=User

# Profile Settings
ALLOW_PROFILE_PICTURE_UPLOAD=true
MAX_PROFILE_PICTURE_SIZE_MB=5
PROFILE_PICTURE_ALLOWED_TYPES=jpg,jpeg,png

# ============================================
# üìä LOGGING & MONITORING
# ============================================

# Logging Configuration
LOG_LEVEL=Information
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=/app/logs/user-service.log

# Audit Logging
ENABLE_AUDIT_LOGGING=true
LOG_USER_ACTIONS=true
LOG_LOGIN_ATTEMPTS=true

# ============================================
# ‚ö° PERFORMANCE & CACHING
# ============================================

# Caching (In-Memory for development)
ENABLE_MEMORY_CACHE=true
CACHE_EXPIRY_MINUTES=30

# Database Connection Pool
DB_CONNECTION_POOL_SIZE=100
DB_COMMAND_TIMEOUT_SECONDS=30

# ============================================
# üîß DEVELOPMENT SETTINGS
# ============================================

# Hot Reload
DOTNET_USE_POLLING_FILE_WATCHER=true
DOTNET_WATCH_RESTART_ON_RUDE_EDIT=true

# Development Features
ENABLE_SWAGGER=true
ENABLE_DETAILED_ERRORS=true
SEED_TEST_USERS=true

# Health Checks
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_DATABASE=true