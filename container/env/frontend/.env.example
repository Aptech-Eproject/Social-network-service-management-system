# ============================================
# üíª FRONTEND CONFIGURATION (Next.js)
# ============================================

# Next.js Configuration
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
WATCHPACK_POLLING=true

# ============================================
# üîí SECURE API ARCHITECTURE
# ============================================
# CSR ‚Üí SSR ‚Üí API Gateway (No direct backend exposure)

# Internal API Gateway URL (Server-side only - NOT PUBLIC)
INTERNAL_API_GATEWAY_URL=http://api-gateway:8000
INTERNAL_API_VERSION=v1

# Frontend API Routes (Public - handled by Next.js API routes)
NEXT_PUBLIC_API_BASE=/api
NEXT_PUBLIC_API_VERSION=v1

# API Timeouts & Retry
API_TIMEOUT_MS=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY_MS=1000

# ============================================
# üîê AUTHENTICATION CONFIGURATION
# ============================================

# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-min-32-chars-long

# JWT Configuration (Server-side only - matches backend)
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-chars-long-for-security
JWT_ISSUER=snms-api-gateway
JWT_AUDIENCE=snms-services

# Session Configuration (Server-side)
SESSION_STRATEGY=jwt
SESSION_MAX_AGE=86400
SESSION_UPDATE_AGE=3600
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax

# Internal API Authentication (Server-to-Server)
INTERNAL_API_KEY=your-internal-api-key-for-ssr-to-gateway
INTERNAL_SERVICE_TOKEN=your-internal-service-token

# ============================================
# üîë GOOGLE OAUTH CONFIGURATION
# ============================================

# Google OAuth Credentials (Server-side only)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth Redirect URLs (handled by Next.js API routes)
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google
OAUTH_SUCCESS_REDIRECT=/dashboard
OAUTH_ERROR_REDIRECT=/auth/login?error=oauth

# OAuth Security
OAUTH_STATE_SECRET=your-oauth-state-secret
OAUTH_PKCE_ENABLED=true

# ============================================
# üé® UI/UX CONFIGURATION
# ============================================

# Application Branding
NEXT_PUBLIC_APP_NAME=SNMS - Social Network Management System
NEXT_PUBLIC_APP_DESCRIPTION=Educational Social Network Platform
NEXT_PUBLIC_APP_VERSION=1.0.0

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# ============================================
# üìÅ FILE UPLOAD CONFIGURATION
# ============================================

# File Upload Limits (Client-side validation)
NEXT_PUBLIC_MAX_FILE_SIZE_MB=10
NEXT_PUBLIC_MAX_IMAGE_SIZE_MB=5
NEXT_PUBLIC_MAX_VIDEO_SIZE_MB=50

# Allowed File Types
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
NEXT_PUBLIC_ALLOWED_VIDEO_TYPES=mp4,avi,mov
NEXT_PUBLIC_ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,txt

# ============================================
# üîí SECURITY CONFIGURATION
# ============================================

# CSRF Protection (Server-side)
CSRF_SECRET=your-csrf-secret-key
CSRF_COOKIE_NAME=__Host-csrf-token
CSRF_HEADER_NAME=X-CSRF-Token

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_ONLY=false
CSP_REPORT_URI=/api/security/csp-report

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff

# API Security (No direct backend exposure)
DISABLE_DIRECT_API_ACCESS=true
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Request Validation
VALIDATE_REQUEST_ORIGIN=true
ALLOWED_ORIGINS=http://localhost:3000
VALIDATE_REFERER=true

# ============================================
# üìä ANALYTICS & MONITORING
# ============================================

# Client-side Analytics (Public)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Server-side Monitoring (Private)
SENTRY_DSN=your-sentry-dsn
ENABLE_ERROR_TRACKING=false
ERROR_REPORTING_ENDPOINT=/api/errors

# Performance Monitoring (Server-side)
ENABLE_WEB_VITALS=true
PERFORMANCE_MONITORING=development
PERFORMANCE_ENDPOINT=/api/performance

# Request Logging (Server-side)
LOG_API_REQUESTS=true
LOG_REQUEST_HEADERS=false
LOG_RESPONSE_TIME=true
LOG_USER_ACTIONS=true

# ============================================
# üåê INTERNATIONALIZATION
# ============================================

# Default Language
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,vi

# Timezone
NEXT_PUBLIC_DEFAULT_TIMEZONE=Asia/Ho_Chi_Minh

# ============================================
# üì± PWA CONFIGURATION
# ============================================

# Progressive Web App
ENABLE_PWA=true
PWA_CACHE_STRATEGY=NetworkFirst

# Push Notifications
ENABLE_PUSH_NOTIFICATIONS=false
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# ============================================
# üîß DEVELOPMENT SETTINGS
# ============================================

# Development Features
ENABLE_REDUX_DEVTOOLS=true
ENABLE_REACT_STRICT_MODE=true
SHOW_DEBUG_INFO=true

# Hot Reload
FAST_REFRESH=true
TURBOPACK=false

# Build Configuration
ANALYZE_BUNDLE=false
BUNDLE_ANALYZER=false

# ============================================
# ‚ö° PERFORMANCE OPTIMIZATION
# ============================================

# Image Optimization (Server-side)
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_DOMAINS=localhost,yourdomain.com
IMAGE_FORMATS=webp,avif
IMAGE_PROXY_ENABLED=true

# Data Fetching Strategy (SSR/SSG)
ENABLE_SSR_CACHING=true
SSR_CACHE_TTL_SECONDS=300
ENABLE_ISR=true
ISR_REVALIDATE_SECONDS=60

# Client-side Caching (SWR)
ENABLE_SWR_CACHE=true
SWR_REVALIDATE_ON_FOCUS=false
SWR_DEDUPE_INTERVAL=2000
SWR_ERROR_RETRY_COUNT=3

# API Response Caching (Server-side)
API_CACHE_ENABLED=true
API_CACHE_TTL_SECONDS=180
API_CACHE_STRATEGY=stale-while-revalidate

# Code Splitting & Bundling
ENABLE_DYNAMIC_IMPORTS=true
CHUNK_SIZE_LIMIT=244000
ENABLE_TREE_SHAKING=true

# ============================================
# üåç EXTERNAL SERVICES
# ============================================

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com
ENABLE_CDN=false

# Third-party Integrations
ENABLE_SOCIAL_SHARING=true
SOCIAL_SHARE_PLATFORMS=facebook,twitter,linkedin

# Map Services (Optional)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
ENABLE_LOCATION_SERVICES=false