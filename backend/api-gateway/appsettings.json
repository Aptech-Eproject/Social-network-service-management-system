{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "user-service": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/users/{**catch-all}" }
        ]
      },
      "social-service": {
        "ClusterId": "social-cluster",
        "Match": {
          "Path": "/api/social/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/social/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "user-cluster": {
        "Destinations": {
          "user-service": {
            "Address": "http://user-service:8081"
          }
        }
      },
      "social-cluster": {
        "Destinations": {
          "social-service": {
            "Address": "http://social-service:8082"
          }
        }
      }
    }
  }
}
