{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Information"
    }
  },
  "AllowedHosts": "*",
  "ServiceUrls": {
    "UserService": "http://user-service:8081",
    "SocialService": "http://social-service:8082"
  },
  "ReverseProxy": {
    "Routes": {
      "user-service-v1": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/v1/users/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/users/{**catch-all}" }
        ],
        "RateLimiterPolicy": "fixed"
      },
      "social-service-v1": {
        "ClusterId": "social-cluster",
        "Match": {
          "Path": "/api/v1/social/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/social/{**catch-all}" }
        ],
        "RateLimiterPolicy": "fixed"
      },
      "user-health": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/health/user"
        },
        "Transforms": [
          { "PathPattern": "/health" }
        ]
      },
      "social-health": {
        "ClusterId": "social-cluster",
        "Match": {
          "Path": "/health/social"
        },
        "Transforms": [
          { "PathPattern": "/health" }
        ]
      }
    },
    "Clusters": {
      "user-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:01:00"
          }
        },
        "Destinations": {
          "user-service-1": {
            "Address": "http://user-service:8081"
          }
        }
      },
      "social-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:01:00"
          }
        },
        "Destinations": {
          "social-service-1": {
            "Address": "http://social-service:8082"
          }
        }
      }
    }
  }
}
